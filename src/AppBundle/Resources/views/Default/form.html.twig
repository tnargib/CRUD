</head>
<body>
	<header>
		<h1>CRUD</h1>
	</header>
	<main id="container" class="fadeIn animated">
	
		<div class="form-group">
			<label for="exampleInputEmail1">Type de l'animal</label>
			<select>
				<option>Reptile</option>
				<option>Mammifère</option>
				<option>Oiseau</option>
			</select>
		</div>

		{% include "AppBundle:form:form_reptile.html.twig" %}
		{% include "AppBundle:form:form_mammifere.html.twig" %}
		{% include "AppBundle:form:form_oiseau.html.twig" %}

		
	</main>
</body>

<script>
	$( "select" )
		.change(function () {
			var str = "";
			$( "select option:selected" ).each(function() {
				str += $( this ).text() + " ";
			});
			$( ".form" ).each(function() {
				$(this).hide();
			});
			if (str.trim() == 'Reptile') {
				$( "#form_reptile" ).show();
			}
			else if (str.trim() == 'Mammifère') {
				$( "#form_mammifere" ).show();
			}
			else {
				$( "#form_oiseau" ).show();
			}
			
		})
	.change();
</script>
</html>